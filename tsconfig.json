{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "pretty": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": [
      "esnext"
    ],
    "rootDir": "./src"
  },
  "include": [
    "src"
  ]
}